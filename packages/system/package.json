{
  "name": "@stage-ui/system",
  "author": "Project one",
  "version": "0.3.1-beta1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/script-heads/StageUI.git",
    "directory": "packages/system"
  },
  "homepage": "https://stageui.project1.io",
  "bugs": "https://github.com/script-heads/StageUI/issues",
  "scripts": {
    "build": "node ../../scripts/make system && yarn build:types && yarn build:js",
    "build:js": "babel ./ --out-dir ../../build/system --extensions \".ts,.tsx\" --ignore \"node_modules/\"",
    "build:types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint --config .eslintrc.json --fix '**/*.+(js|jsx|ts|tsx)'"
  },
  "dependencies": {
    "@types/color": "3.0.2",
    "color": "3.1.3",
    "@emotion/react": ">=11",
    "@emotion/cache": ">=11"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
