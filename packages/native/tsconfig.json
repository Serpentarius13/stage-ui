{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "target": "esnext",
    "outDir": "../../build/core",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true
  },
  "include": [
    "components/**/*",
    "hooks/**/*",
    "scripts/**/*",
    "themes/**/*",
    "utils/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}